section.ih-content.s3
  .ih-content-inner.container
    header.text-center(style="background-image: url('{{content.thumb}}');")
      h1.inlineblock(itemprop='headline') {{content.title}}
    .ih-content-body(ng-class="!content.disableSidebar ? 'col-lg-8 col-md-8 col-sm-12 col-xs-12' : ''")
      div(ng-if='content.content !== undefined && !content.contentUrl')
        div(ng-bind-html='content.content | to_trusted')
      div(ng-if='content.contentUrl !== undefined')
        ng-include(src='content.contentUrl')
    .ih-side-panel.col-lg-4.col-md-4.col-sm-12.col-xs-12(ng-hide='content.disableSidebar')
      #sideAccordion.panel-group(role='tablist', aria-multiselectable='true')
        .panel.panel-default
          #sideHeadingOne.panel-heading(role='tab')
            h4.panel-title
              a(role='button', data-toggle='collapse', data-parent='#sideAccordion', href='#sideCollapseOne', aria-expanded='true', aria-controls='sideCollapseOne', onclick='event.preventDefault()')
                | Contact {{agent.teamName}}
          #sideCollapseOne.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='sideHeadingOne')
            .panel-body
              ih-contact(configname='f1')
