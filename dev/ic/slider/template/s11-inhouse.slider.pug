section.s11.ih-slider.container-fluid
  .iha.ih-greeting.container(ng-if='LandingComponent.showGreeting')
    .ih.container.ih-narrative.text-center.bf-gd-tp
      .col-lg-3.col-md-3.col-sm-3.col-xs-12(ng-if='LandingComponent.showBuyAHome')
        a.ih-nar-btn.btn.btn-primary.fullw(href='{{LandingComponent.buyLink}}')
          | {{LandingComponent.buyAHomeText}}
      .col-lg-43col-md-3.col-sm-3.col-xs-12(ng-if='LandingComponent.showSellAHome')
        a.ih-nar-btn.btn.btn-primary.fullw(href='{{LandingComponent.sellLink}}')
          | {{LandingComponent.sellAHomeText}}
      .col-lg-3.col-md-3.col-sm-3.col-xs-12(ng-if='LandingComponent.showJustAdvice')
        a.ih-nar-btn.btn.btn-primary.fullw(href='{{LandingComponent.adviceLink}}')
          | {{LandingComponent.adviceText}}
      .col-lg-3.col-md-3.col-sm-3.col-xs-12(ng-if='LandingComponent.showAdditional')
        a.ih-nar-btn.btn.btn-primary.fullw(href='{{LandingComponent.additionalLink}}')
          | {{LandingComponent.additionalText}}
  .ih-slider-row.row
    .ih-slider-inner.carousel.slide.carousel-fade(id='{{slider}}', data-ride='carousel')
      div(uib-carousel='', active='active', no-wrap='false', no-pause='true')
        div(uib-slide='', ng-repeat='slide in slides', index='$index', style="background-image: url('{{slide.image}}');")
