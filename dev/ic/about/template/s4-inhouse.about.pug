section.s2.ih-about
  .container
    h1.ih-header.text-center(itemprop='name') Our Team
    .ih-about-inner.row
      ul(data-uk-switcher="{connect:'#aboutSwitcher'}")
        li
          a(href='')
      ul#aboutSwitcher.uk-switcher
        li
          .container-fluid
            .col-lg-4.col-md-4.col-sm-12.col-xs-12
              a.text-center(href="#/bio/{{agent.team[0].key}}")
                img.img-square.img-responsive(ng-src='{{agent.team[0].photo}}', alt='{{agent.team[0].name}}')
            .ih-about-text.col-lg-8.col-md-8.col-sm-12.col-xs-12
              h2
                span(itemprop='name') {{agent.agentName}}
                .about-social
                  a.ih-social-icon(href='mailto:{{agent.contactEmail}}', ng-if='agent.contactEmail !== undefined')
                    i.fa.fa-envelope
                  a.ih-social-icon(href='{{agent.facebook}}', ng-if='agent.facebook !== undefined')
                    i.fa.fa-facebook
                  a.ih-social-icon(href='{{agent.linkedin}}', ng-if='agent.linkedin !== undefined')
                    i.fa.fa-linkedin
                  a.ih-social-icon(href='{{agent.twitter}}', ng-if='agent.twitter !== undefined')
                    i.fa.fa-twitter
                  a.ih-social-icon(href='{{agent.instagram}}', ng-if='agent.instagram !== undefined')
                    i.fa.fa-instagram
                  a.ih-social-icon(href='{{agent.pinterest}}', ng-if='agent.pinterest !== undefined')
                    i.fa.fa-pinterest
              h4 Realtor Â® | {{agent.teamName}} - {{agent.brokerage}}
              p
                strong.text-uppercase {{agent.agentTagline}}
              .bio.fs(itemprop='description', ng-bind-html='agent.bio1 | to_trusted')
