              ul.bullets
                li
                  i.fa.fa-caret-right.text-muted
                  |  No creation time or manual upload necessary
                li
                  i.fa.fa-caret-right.text-muted
                  |  Increase your online presence and generate leads
                li
                  i.fa.fa-caret-right.text-muted
                  |  Launch a listing site, post to social media, or download PDFs with one click
            .col-lg-6.col-md-6.col-sm-6.col-xs-12.text-center
              img.img-responsive.hidden-xs(src='ua/images/lender-materials.svg')
    section.pricing.bkc-03.fw
      .container.lender-only
        h1.ih-header.text-center Pricing
        .ih-sm-divider
        .row.text-center
          .btn-group
            a(ng-class="{'active' : monthlyPrice}", ng-click='monthlyPrice = true') Monthly
            a(ng-class="{'active' : !monthlyPrice}", ng-click='monthlyPrice = false') Annual
        .row.price-row
          .col-lg-6.col-md-6.col-sm-6.col-xs-12
            .price-card
              h2.text-center Individual
              .ih-sm-divider
              h1
                span.annual(ng-show='monthlyPrice')
                  sup $
                  | 99
                span.monthly(ng-show='!monthlyPrice')
                  sup $
                  | 79
              strong.subtext.text-center.text-uppercase.block / month
              ul.bullets
                li
                  i.fa.fa-caret-right
                  |  Invite unlimited agent partners
                li
                  i.fa.fa-caret-right
                  |  Create Unlimited Materials
                li
                  i.fa.fa-caret-right
                  |  Automatic Material Creation
              a.btn.btn-default(href='#/signup') sign-up today
          .col-lg-6.col-md-6.col-sm-6.col-xs-12
            .price-card
              h2.text-center Office
              .ih-sm-divider
              h1
                span.annual(ng-show='monthlyPrice')
                  sup $
                  | 499
                span.monthly(ng-show='!monthlyPrice')
                  sup $
                  | 399
              strong.subtext.text-center.text-uppercase.block / month
              ul.bullets
                li
                  i.fa.fa-caret-right
                  |  Up to 7 active MLOs
                li
                  i.fa.fa-caret-right
                  |  Invite unlimited agent partners
                li
                  i.fa.fa-caret-right
                  |  Create unlimited materials
              a.btn.btn-default(href='#/signup') sign-up today
        .row.text-center
          h2.ih-lg-header sign-up for a free trial today!
