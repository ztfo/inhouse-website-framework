              span Presented by: {{agent.agentName}}
            address
              | {{listing.Details.address}}
              br
              | {{listing.Details.city}} {{listing.Details.state}} {{listing.Details.zipcode}}
            address
              h6
                small
                  strong.text-uppercase Phone:
                | {{agent.contactPhone | tel}}
              h6
                small
                  strong.text-uppercase Email:
                | {{agent.contactEmail}}
          .flex-6
            address
              strong {{agent.brokerage}}
              br
              | {{agent.contactAddress}}
