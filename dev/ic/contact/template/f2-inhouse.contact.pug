//- sell home contact form
//- used in all sell/home value links
.ih-contact-form.f2
  form(
    ng-submit='submitContact()',
    name='SellerInquiry')
    .text-center.alert.alert-success.fade.in(
      ng-show='contactSent')
      h3
        strong Thank You!
      hr
      |  We will be in touch with you shortly. You can also call&nbsp;
      strong {{agent.contactPhone | tel}}.
    .text-center.alert.alert-info.fade.in(
      ng-show='contactSending')
      h3
        strong Please wait..
      hr
      |  We're sending your message...
    .text-center.alert.alert-danger.fade.in(
      ng-show='contactSendFailed')
      h3
        strong We're sorry...
      hr
      |  There was an issue sending your message. Please make sure you have entered a valid name and email address and try again. If this problem continues, please call us at {{agent.contactPhone | tel}}. Sorry for the inconvenience.
    .container-fluid(
      ng-hide='contactSent || contactSending')
      h3 Your Contact Information
      .form-group
        label(for='sellerName') full name
        input#sellerName.form-control(
          type='text',
          placeholder='Full Name',
          name='Full Name',
          ng-model='contact.name')
      .row
        .form-group.col-lg-6
          label(for='sellerPhone') phone
          input#sellerPhone.form-control(
            type='text',
            name='Phone',
            placeholder='Phone',
            ng-model='contact.phone')
        .form-group.col-lg-6
          label(for='sellerEmail') email
          input#sellerEmail.form-control(
            type='text',
            name='Email',
            placeholder='Email',
            required='',
            ng-model='contact.email')
      h3 Your Property Information
      .form-group
        label(for='sellerAddress') property address
        input#sellerAddress.form-control(
          type='text',
          placeholder='Property Address',
          name='Property Address',
          ng-model='contact.note["Property Address"]')
      .form-group
        ih-dropdown(
          items='[{"name": "Immediately", "value": "Immediately"}, {"name": "30-days", "value": "30-days"}, {"name": "60-days", "value": "60-days"}, {"name": "4 months +", "value": "4 months +"}]',
          name='How soon?',
          ng-model='contact.note["Urgency"]')
      .form-group
        ih-dropdown(
          items='[{"name": "Single Family", "value": "Single Family"}, {"name": "Townhouse/Condo", "value": "Townhouse/Condo"}, {"name": "Manufactured", "value": "Manufactured"}, {"name": "Land/Lot", "value": "Land/Lot"}]',
          name='Property Type',
          ng-model='contact.note["Property Type"]')
      .form-group
        label(for='sellerMessage') additional details
        textarea#sellerMessage.form-control.ih-textarea(
          name='Additional Details',
          placeholder='Please provide a description of your home and/or reason for selling',
          required='',
          ng-model='contact.note["Additional Details"]')
      .text-center.submit-btn
        button.btn.btn-primary(type='submit') submit
