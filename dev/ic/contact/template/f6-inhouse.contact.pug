//- used in s6 landing-search configuration
//- do not use stand-alone
h2.ih-subheader.fw.text-uppercase get in touch
.ih-contact-form.f6
  form(
    ng-submit='Contact.$valid && submitContact()',
    name='Contact Us')
    .text-center.alert.alert-success.fade.in(ng-show='contactSent')
      h3
        strong Thank You!
      |  We will be in touch with you shortly. You can also call&nbsp;
      strong {{agent.contactPhone | tel}}.
    .text-center.alert.alert-info.fade.in(ng-show='contactSending')
      h3
        strong Please wait..
      h4  We're sending your message...
    .text-center.alert.alert-danger.fade.in(ng-show='contactSendFailed')
      h3
        strong We're sorry...
      | There was an issue sending your message. Please make sure you have entered a valid name and email address and try again. If this problem continues, please call us at {{agent.contactPhone | tel}}. Sorry for the inconvenience.
    .container-fluid.form-container
      .row
        .col-lg-6.col-md-6.col-sm-6.col-xs-12
          input#messageName.ih-form-input.form-control(
            type='name',
            ng-model='contact.name',
            placeholder='Full Name',
            required='')
        .col-lg-6.col-md-6.col-sm-6.col-xs-12
          input#emailAddress.ih-form-input.form-control(
            type='email',
            ng-model='contact.email',
            placeholder='Email Address',
            required='')
      .row
        .col-lg-6.col-md-6.col-sm-6.col-xs-12
          input#phoneNumber.ih-form-input.form-control(
            type='phone',
            ng-model='contact.phone',
            placeholder='Phone Number')
        .col-lg-6.col-md-6.col-sm-6.col-xs-12
          ih-dropdown(
            items='[{"name": "Looking to Sell", "value": "Looking to Sell"}, {"name": "Looking to Buy", "value": "Looking to Buy"}, {"name": "Just Need Advice", "value": "Just Need Advice"}]',
            name='Reason for contact',
            ng-model='contact.note["Reason for Contact"]')
      .row
        .col-lg-10.col-md-9.col-sm-9.col-xs-12
          textarea#textMessage.ih-form-input.form-control(
            type='text',
            required='',
            row='5',
            ng-model='contact.note["Message"]',
            placeholder='Write your message here.')
        .col-lg-2.col-md-3.col-xs-3.col-xs-12
          button.btn.btn-primary.block.fullw(type='submit') submit
