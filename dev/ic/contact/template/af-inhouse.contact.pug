//- used in Affiliate Page in contact forms on getinhouse.io
//- do not use on client sites
.ih-contact-form.inhouse-form
  form(ng-submit='Contact.$valid && submitContact()',
  name='AffiliateSignup')
    .text-center.alert.alert-success.fade.in(
      ng-show='contactSent')
      h3
        strong Thank You!
      hr
      | We will be in touch with you shortly. You can also call&nbsp;
      strong {{agent.contactPhone | tel}}.
    .text-center.alert.alert-info.fade.in(
      ng-show='contactSending')
      h3
        strong Please wait...
      hr
      | We're sending your message...
    .text-center.alert.alert-danger.fade.in(
      ng-show='contactSendFailed')
      h3
        strong We're sorry.
      hr
      | There was an issue sending your message. Please make sure you have entered a valid name and email address and try again. If this problem continues, please call us at {{agent.contactPhone | tel}}. Sorry for the inconvenience.
    .form-group
      label(for='messageName') full name test
      input#messageName.ih-form-input.form-control(
        type='name',
        ng-model='contact.name',
        required='')
    .row
      .form-group.col-lg-6.col-md-6.col-sm-12.col-xs-12
        label(for='emailAddress') email
        input#emailAddress.ih-form-input.form-control(
          type='email',
          ng-model='contact.email',
          required='')
      .form-group.col-lg-6.col-md-6.col-sm-12.col-xs-12
        label(for='phoneNumber') phone
        input#phoneNumber.ih-form-input.form-control(
          type='phone',
          ng-model='contact.phone')
      input.hidden(
        type='text',
        ng-model='contact.confirmEmail',
        name='confirmEmail')
    .form-group
      label(for='messageCompany')
        | company&nbsp;
        small optional
      input#messageCompany.ih-form-input.form-control(
        type='name',
        ng-model='contact.note["Company"]')
    .text-center
      button.btn.btn-primary.block.fullw(type='submit') submit
