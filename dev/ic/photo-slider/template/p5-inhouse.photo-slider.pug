section.p5.ih-photo-slider.fp.fw
  .container
    h1.ih-header Photo Gallery
    .ih-sm-divider
    .row
      ih-owl.owl-carousel.tst-carousel(items='listing.photos', responsive='responsive')
        .listing-pic-block.full(ng-repeat='photo in listing.photos')
          .listing-pic(ng-style="{'background-image': 'url(' + photo.large + ')'}")
            a.block.full.fw(ng-click='showLightBox($index)')
              span.fa.fa-camera
