section.p3.ih-photo-slider
  h2.fw.ih-header Listing Photos
  div.flex-grid.ft-listing-grid.reverse-hover
    div.flex-col.resize
      div.flex-item.offset.resize-item(ng-repeat='photo in listing.Details.photos | limitTo:3')
        a.block.full.listing-link(ng-click='showLightBox($index)', ng-style="{'background-image': 'url(' + photo.large + ')'}", itemscope='', itemtype='http://schema.org/Product', itemprop='additionalProperty')
    div.flex-col.resize
      div.flex-item.offset.resize-item(ng-repeat='photo in listing.Details.photos | startFrom:4 | limitTo: 2')
        a.block.full.listing-link(ng-click='showLightBox($index)', ng-style="{'background-image': 'url(' + photo.large + ')'}", itemscope='', itemtype='http://schema.org/Product', itemprop='additionalProperty')
    div.flex-col.resize
      div.flex-item.offset.resize-item(ng-repeat='photo in listing.Details.photos | startFrom:7 | limitTo: 3')
        a.block.full.listing-link(ng-click='showLightBox($index)', ng-style="{'background-image': 'url(' + photo.large + ')'}", itemscope='', itemtype='http://schema.org/Product', itemprop='additionalProperty')
