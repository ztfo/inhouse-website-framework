section.p3.ih-testimonials.ih.fw(class='{{classes}}')
    div.container-fluid.testimonials-inner(ng-show='testimonials.length > 0')
      h2.ih-header What our clients say
      div.ih-sm-divider
      ih-owl.owl-carousel.tst-carousel(items='testimonials', responsive='responsive')
        .item.text-center(class="{{$index == 0 ? 'active' : ''}}", ng-repeat='slide in testimonials')
          blockquote.testimonial(itemprop='review')
            .ih-ratings(itemprop='rating')
              i.fa.fa-star(ng-repeat='i in range(1, slide.stars)')
              span.sr-only {{rating}}
            p(itemprop='review fs') {{slide.testimonial}}
            h5 - {{slide.reviewer}}
