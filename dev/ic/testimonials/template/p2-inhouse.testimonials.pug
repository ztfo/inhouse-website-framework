section.p2.ih-testimonials.ih.z0.fp.fw(
  class='{{classes}}',
  ng-style="{'background-image': 'url(' + listing.Details.primaryPhoto.large + ')'}")
  .bkc-01
    .container(ng-show='testimonials.length > 0')
      h1.ih-header.text-center What our clients say
      ih-owl.owl-carousel.tst-carousel(items='testimonials', responsive='responsive')
        .item.text-center(class="{{$index == 0 ? 'active' : ''}}", ng-repeat='slide in testimonials | filter: !!hidden')
          blockquote.testimonial(itemprop='review')
            .ih-ratings(itemprop='rating')
              i.fa.fa-star(ng-repeat='i in range(1, slide.stars)')
              span.sr-only {{rating}}
            p(itemprop='review fs') {{slide.testimonial | limitTo:300}}...
            h5 - {{slide.reviewer}}
      .ih.text-center(ng-hide='!showZillow')
        span.ih-ui.ih-ui-zillow
    .footer.bt70
      .container.legal-disclaimers.small
        | {{listing.Details.disclaimer | limitTo: 355}} {{user.meta.disclaimer1 | limitTo: 355}} |
        hr
        | &nbsp; {{lender.disclaimer | limitTo: 355}}
      .container
        .col-lg-6.col-md-6.col-sm-6.col-xs-12.text-center-xs
          span.ih-ui-fairhousing
          span.ih-ui-realtor
          small Â© {{year}} - {{agent.agentName}} | {{listing.Details.mlsAssociation}}
        .col-lg-6.col-md-6.col-sm-6.col-xs-12.text-center-xs.text-right
          .pull-right
            a(href="https://www.getinhouse.io", target="_blank", rel="noopener")
              span.ih-icon.ih-sm-icon.ih-ui-inhouse-emblem
          .pull-right.text-uppercase
            a(href="http://www.getinhouse.io", target="_blank")
              small
                | inspired by html5up
              br
              small powered by InHouse
